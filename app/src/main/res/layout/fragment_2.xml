<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment2">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:focusable="true"
         android:focusableInTouchMode="true">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="300dp"
                android:layout_height="600dp"
                android:background="@color/black"
                android:visibility="visible"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="false"
                tools:layout_editor_absoluteX="15dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvCuanto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="¿Cuánto y cómo?" />

                <EditText
                    android:id="@+id/etMonto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Monto del ahorro"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="Fecha de ahorro"/>

                <EditText
                    android:id="@+id/etFechaMeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Fecha de meta"
                    android:inputType="date" />
                <TextView
                    android:id="@+id/tvPeriodicidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:text="Periodicidad"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="160dp">

                    <Button
                        android:id="@+id/btnSemanal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        app:cornerRadius = "20dp"
                        android:textSize="8dp"
                        android:text="Semanal"/>


                    <Button
                        android:id="@+id/btnQuincenal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cornerRadius = "20dp"
                        android:textSize="8dp"
                        android:text="Quincenal"/>

                    <Button
                        android:id="@+id/btnMensual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mensual"
                        android:textSize="8dp"
                        app:cornerRadius="20dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿En cuántas semanas voy a lograr mi ahorro?"
                    android:layout_marginTop="230dp"/>

                <SeekBar
                    android:id="@+id/barSemana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:max="52" />

                <Button
                    android:id="@+id/btncontinuar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="550dp"
                    android:layout_marginLeft="100dp"
                    android:text="Continuar"
                    app:cornerRadius="20dp" />




            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>